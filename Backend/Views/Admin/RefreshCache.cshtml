@{
    ViewData["Title"] = "Refresh Cache";
}

<div class="row mb-4">
    <div class="col-12">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Admin")">Admin</a></li>
                <li class="breadcrumb-item active" aria-current="page">刷新快取</li>
            </ol>
        </nav>
        <h1 class="display-5">
            <i class="bi bi-arrow-clockwise"></i> 刷新快取
        </h1>
        <p class="lead">從外部 API 重新獲取最新的避難所資料</p>
    </div>
</div>

<div class="row mb-4">
    <div class="col-lg-8 offset-lg-2">
        <div class="card">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0"><i class="bi bi-info-circle"></i> 操作說明</h5>
            </div>
            <div class="card-body">
                <p><strong>刷新快取</strong>會執行以下操作：</p>
                <ol>
                    <li>從外部 API 獲取最新的避難所資料（天然災害 + 防空避難所）</li>
                    <li>更新 SQLite 資料庫中的快取資料</li>
                    <li>更新記憶體快取</li>
                    <li>記錄更新時間和資料筆數</li>
                </ol>
                <div class="alert alert-warning mt-3">
                    <i class="bi bi-exclamation-triangle"></i> 
                    <strong>注意：</strong>此操作可能需要 3-5 秒鐘，期間會從外部 API 獲取資料。
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mb-4">
    <div class="col-lg-8 offset-lg-2">
        <div class="card">
            <div class="card-body text-center py-5" id="refreshContent">
                <i class="bi bi-arrow-clockwise display-1 text-success mb-3"></i>
                <h4 class="mb-4">準備刷新快取</h4>
                <p class="text-muted mb-4">點擊下方按鈕開始刷新快取資料</p>
                <button class="btn btn-success btn-lg" onclick="startRefresh()">
                    <i class="bi bi-arrow-clockwise"></i> 開始刷新
                </button>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-8 offset-lg-2">
        <div class="alert alert-info">
            <h6><i class="bi bi-lightbulb"></i> 建議的使用時機</h6>
            <ul class="mb-0">
                <li>每日定期維護（建議在凌晨低峰時段執行）</li>
                <li>當快取年齡超過 24 小時時</li>
                <li>當避難所資訊有已知的更新時</li>
                <li>健康檢查顯示警告時</li>
            </ul>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <script>
        function startRefresh() {
            if (!confirm('確定要刷新快取嗎？\n\n這將從外部 API 重新獲取資料，可能需要幾秒鐘。')) {
                return;
            }

            showLoading();

            const startTime = new Date();

            $.ajax({
                url: '/api/Admin/refresh-cache',
                method: 'POST',
                success: function(response) {
                    const duration = ((new Date() - startTime) / 1000).toFixed(2);
                    showSuccess(response, duration);
                },
                error: function(xhr, status, error) {
                    showError(xhr.responseJSON?.message || error);
                }
            });
        }

        function showLoading() {
            $('#refreshContent').html(`
                <div class="spinner-border text-success mb-3" role="status" style="width: 4rem; height: 4rem;">
                    <span class="visually-hidden">載入中...</span>
                </div>
                <h4 class="mb-3">正在刷新快取...</h4>
                <p class="text-muted">請稍候，正在從外部 API 獲取資料</p>
                <div class="progress mt-3" style="height: 30px;">
                    <div class="progress-bar progress-bar-striped progress-bar-animated bg-success" 
                         role="progressbar" style="width: 100%">
                        處理中...
                    </div>
                </div>
            `);
        }

        function showSuccess(response, actualDuration) {
            const data = response.data;
            const html = `
                <div class="alert alert-success mb-4">
                    <h4><i class="bi bi-check-circle"></i> 刷新成功！</h4>
                </div>

                <div class="row mb-4">
                    <div class="col-md-4">
                        <div class="card border-success">
                            <div class="card-body text-center">
                                <i class="bi bi-database fs-1 text-success"></i>
                                <h6 class="text-muted mt-2">總避難所數</h6>
                                <h3 class="text-success">${data.totalShelters.toLocaleString()}</h3>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card border-info">
                            <div class="card-body text-center">
                                <i class="bi bi-clock fs-1 text-info"></i>
                                <h6 class="text-muted mt-2">耗時</h6>
                                <h3 class="text-info">${actualDuration}秒</h3>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card border-primary">
                            <div class="card-body text-center">
                                <i class="bi bi-calendar-check fs-1 text-primary"></i>
                                <h6 class="text-muted mt-2">更新時間</h6>
                                <p class="mb-0">${new Date(data.timestamp).toLocaleString('zh-TW')}</p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card mb-4">
                    <div class="card-header bg-light">
                        <h6 class="mb-0"><i class="bi bi-pie-chart"></i> 資料分類</h6>
                    </div>
                    <div class="card-body">
                        <dl class="row mb-0">
                            <dt class="col-sm-6">天然災害避難所:</dt>
                            <dd class="col-sm-6"><strong class="text-primary">${data.sheltersByType.naturalDisaster.toLocaleString()}</strong> 筆</dd>

                            <dt class="col-sm-6">防空避難所:</dt>
                            <dd class="col-sm-6"><strong class="text-info">${data.sheltersByType.airRaid.toLocaleString()}</strong> 筆</dd>
                        </dl>
                    </div>
                </div>

                <div class="d-grid gap-2">
                    <a href="@Url.Action("Index", "Admin")" class="btn btn-primary">
                        <i class="bi bi-house"></i> 返回主控台
                    </a>
                    <a href="@Url.Action("CacheStatus", "Admin")" class="btn btn-outline-info">
                        <i class="bi bi-info-circle"></i> 查看快取狀態
                    </a>
                    <button class="btn btn-outline-success" onclick="startRefresh()">
                        <i class="bi bi-arrow-clockwise"></i> 再次刷新
                    </button>
                </div>
            `;

            $('#refreshContent').html(html);
        }

        function showError(message) {
            $('#refreshContent').html(`
                <div class="alert alert-danger mb-4">
                    <h4><i class="bi bi-x-circle"></i> 刷新失敗</h4>
                    <p class="mb-0">${message}</p>
                </div>

                <div class="d-grid gap-2">
                    <button class="btn btn-danger" onclick="startRefresh()">
                        <i class="bi bi-arrow-clockwise"></i> 重試
                    </button>
                    <a href="@Url.Action("Index", "Admin")" class="btn btn-outline-secondary">
                        <i class="bi bi-house"></i> 返回主控台
                    </a>
                </div>
            `);
        }
    </script>
}
