@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="row mb-4">
    <div class="col-12">
        <h1 class="display-4">
            <i class="bi bi-shield-lock"></i> Admin Dashboard
        </h1>
        <p class="lead">避難所快取系統管理介面</p>
    </div>
</div>


<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header bg-dark text-white">
                <h5 class="mb-0"><i class="bi bi-heart-pulse"></i> 系統健康狀態</h5>
            </div>
            <div class="card-body" id="healthStatus">
                <div class="text-center">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">載入中...</span>
                    </div>
                    <p class="mt-2">正在載入健康狀態...</p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="alert alert-info" role="alert">
            <h5 class="alert-heading"><i class="bi bi-lightbulb"></i> 使用提示</h5>
            <ul class="mb-0">
                <li>建議每日執行一次「完整更新」以確保資料最新</li>
                <li>系統會自動使用快取，無需手動干預</li>
                <li>如果快取超過 24 小時，健康檢查會顯示警告</li>
                <li>記憶體快取每 5 分鐘自動更新，資料庫快取持久保存</li>
            </ul>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <script>
        // 載入頁面時檢查健康狀態
        $(document).ready(function() {
            loadHealthStatus();
        });

        function loadHealthStatus() {
            $.ajax({
                url: '/api/Admin/health',
                method: 'GET',
                success: function(response) {
                    displayHealthStatus(response);
                },
                error: function(xhr, status, error) {
                    $('#healthStatus').html(`
                        <div class="alert alert-danger">
                            <i class="bi bi-x-circle"></i> 無法載入健康狀態: ${error}
                        </div>
                    `);
                }
            });
        }

        function displayHealthStatus(response) {
            const data = response.data;
            const statusClass = response.healthy ? 'success' : 'danger';
            const statusIcon = response.healthy ? 'check-circle' : 'x-circle';
            const statusText = response.healthy ? '健康' : '不健康';

            let warnings = '';
            if (data.warnings && data.warnings.length > 0) {
                warnings = `
                    <div class="alert alert-warning mt-3">
                        <h6><i class="bi bi-exclamation-triangle"></i> 警告</h6>
                        <ul class="mb-0">
                            ${data.warnings.map(w => `<li>${w}</li>`).join('')}
                        </ul>
                    </div>
                `;
            }

            const cacheAge = data.cache.ageInHours ? `${data.cache.ageInHours.toFixed(1)} 小時` : '未知';
            const lastUpdated = data.cache.lastUpdated ? new Date(data.cache.lastUpdated).toLocaleString('zh-TW') : '未知';

            $('#healthStatus').html(`
                <div class="alert alert-${statusClass} mb-3">
                    <h4><i class="bi bi-${statusIcon}"></i> 系統狀態: ${statusText}</h4>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body text-center">
                                <h6 class="text-muted">快取記錄數</h6>
                                <h3 class="text-primary">${data.cache.recordCount.toLocaleString()}</h3>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body text-center">
                                <h6 class="text-muted">快取年齡</h6>
                                <h3 class="text-info">${cacheAge}</h3>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body text-center">
                                <h6 class="text-muted">最後更新</h6>
                                <p class="mb-0 small">${lastUpdated}</p>
                            </div>
                        </div>
                    </div>
                </div>
                ${warnings}
            `);
        }

        function checkHealth() {
            showLoading('檢查健康狀態中...');
            loadHealthStatus();
        }

        function refreshCache() {
            if (!confirm('確定要刷新快取嗎？這將從外部 API 重新獲取資料，可能需要幾秒鐘。')) {
                return;
            }

            showLoading('正在刷新快取...');
            $.ajax({
                url: '/api/Admin/refresh-cache',
                method: 'POST',
                success: function(response) {
                    showSuccess(`快取刷新成功！共更新 ${response.data.totalShelters} 筆資料，耗時 ${response.data.refreshDurationSeconds} 秒。`);
                    setTimeout(loadHealthStatus, 1000);
                },
                error: function(xhr, status, error) {
                    showError('刷新快取失敗: ' + (xhr.responseJSON?.message || error));
                }
            });
        }

        function clearCache() {
            if (!confirm('⚠️ 警告：這將清除所有快取資料！\n\n確定要繼續嗎？')) {
                return;
            }

            showLoading('正在清除快取...');
            $.ajax({
                url: '/api/Admin/clear-cache',
                method: 'DELETE',
                success: function(response) {
                    showSuccess('所有快取已清除！');
                    setTimeout(loadHealthStatus, 1000);
                },
                error: function(xhr, status, error) {
                    showError('清除快取失敗: ' + (xhr.responseJSON?.message || error));
                }
            });
        }

        function showLoading(message) {
            $('#healthStatus').html(`
                <div class="text-center">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">載入中...</span>
                    </div>
                    <p class="mt-2">${message}</p>
                </div>
            `);
        }

        function showSuccess(message) {
            $('#healthStatus').html(`
                <div class="alert alert-success">
                    <i class="bi bi-check-circle"></i> ${message}
                </div>
            `);
        }

        function showError(message) {
            $('#healthStatus').html(`
                <div class="alert alert-danger">
                    <i class="bi bi-x-circle"></i> ${message}
                </div>
            `);
        }
    </script>
}
